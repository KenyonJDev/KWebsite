	<section>
        {{#if msg}}
            <p id="msg" class="msg">{{msg}}</p>
        {{/if}}

		<h2>Create an Account</h2>
		<form action="/register" enctype="multipart/form-data" method="post" class="infoInput">
			<p>Username:<br /><input type="text" id="user" name="user" placeholder="Your preferred username (No Spaces)" value="" required></p>
			<p>Password:<br /><input type="password" id="pass" name="pass" placeholder="Your chosen password" value="" required></p>
			<p><input id="register" type="submit" value="Register"></p>
		</form>
	</section>

	<footer>
    	<hr>
