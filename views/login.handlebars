<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Log In</title>
		<meta name="description" content="Login page for registered users">
		<meta name="author" content="">
		<link href="css/global.css" type="text/css" rel="stylesheet">
		<link href="css/login.css" type="text/css" rel="stylesheet">
	</head>
	<body>
		<h1 class="webTitle"><a href="/">Sense</a></h1>
		<nav>
			<ul class="nav">
				<li><a href="#">Home</a></li>
				<li><a href="songs">Songs</a></li>
				<li><a href="playlists">Playlists</a></li>
				<li><a href="upload">Upload</a></li>
				<li><a href="login">Login/Signup</a></li>
				<form>
					<input type="text" placeholder="Search...">
					<input type="image" src="icons/SearchBarIcon.png" alt="search button" name="submit" />
				</form>
			</ul>
			
		</nav>
		<section>
			<h2>Log In</h2>
			{{#if msg}}
				<p class="msg" id="msg">{{msg}}</p>
			{{/if}}
			<form action="/login" method="post" class="loginRegister">
				<p>Username:<br /><input type="text" name="user" id="user" placeholder="Your username..." value="{{user}}" autofocus></p>
				<p>Password:<br /><input type="password" name="pass" id="pass" placeholder="Your password..." value=""></p>
				<p><input type="submit" id="login" value="Log in"></p>
			</form>
			<p><a href="/register">Don't have an account? Register here!</a></p>
		</section>
	</body>
</html>
